@{
	ViewBag.Titulo = "Página Inicial";
}

<div class="row g-5 justify-content-center mt-3">
	<div class="col order-1 order-lg-0">
		<h2 class="text-primary fs-1 fw-bold">Welcome!</h2>

		<p class="fs-4 mt-3">
			Sistema de controle de medicamentos e prescrições! 
		</p>

		<p class="fs-4 mt-3">
			Gerencie estoque, empregados, pacientes e prescrições em um só sistema. 
		</p>

		<p class="fs-4 mt-4 text-secondary-emphasis">Selecione uma opção para continuar:</p>

		<div class="d-grid d-lg-flex flex-wrap gap-2">
			<a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary fw-semibold px-5 rounded-3">
				Empregados
			</a>
			<a asp-controller="Supplier" asp-action="Index" class="btn btn-outline-primary fw-semibold px-5 rounded-3">
				Fornecedores
			</a>
			<a asp-controller="Patient" asp-action="Index" class="btn btn-outline-primary fw-semibold px-5 rounded-3">
				Pacientes
			</a>
			<a asp-controller="Medication" asp-action="Index" class="btn btn-outline-primary fw-semibold px-5 rounded-3">
				Medicamento
			</a>
			<a asp-controller="Prescription" asp-action="Index" class="btn btn-outline-primary fw-semibold px-5 rounded-3">
				Prescrição
			</a>
			<a asp-controller="Inventory" asp-action="Index" class="btn btn-outline-primary fw-semibold px-5 rounded-3">
				Estoque
			</a>

		</div>
	</div>

	<div class="col-lg-5 order-0 order-lg-1">
		<img src="~/images/undraw_medicine.svg" class="img-fluid" />
	</div>
</div>
